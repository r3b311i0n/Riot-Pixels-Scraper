{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es5",
    "sourceMap": true,
    "inlineSources": true,
    "outDir": "./dist/",
    "lib": [
      "dom",
      "dom.iterable",
      "es5",
      "es6",
      "scripthost",
      "es2016",
      "es2017"
    ],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "jsx": "react",
    "noImplicitAny": true,
    "removeComments": true
  },
  "include": [
    "./src/**/*",
    "./test/**/*"
  ]
}